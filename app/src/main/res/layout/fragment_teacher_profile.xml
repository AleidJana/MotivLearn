<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jana.motivlearn.tab3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignBottom="@+id/cardView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center|top"
                android:layout_marginBottom="87dp"
                android:elevation="10dp"
                android:padding="10dp"
                android:src="@drawable/profileimg" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:layout_marginTop="50dp"
                android:layout_alignTop="@id/qcard"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/cardback"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Noura Alomar"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#5a3689"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="112dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/coins" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="100"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="55dp"
                            android:background="@drawable/level" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/swedepartment" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TabHost
                android:id="@+id/tabHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="240dp"
                android:theme="@style/TabWidgetTheme"
                android:layout_weight="4"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:background="@color/cardback"
                        android:layout_height="wrap_content"></TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="400dp"
                                android:layout_height="300dp">
                                <com.nightonke.boommenu.BoomMenuButton
                                    android:id="@+id/bmb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:bmb_buttonEnum="textInsideCircle"
                                    app:bmb_piecePlaceEnum="piecePlace_dot_2_1"
                                    app:bmb_buttonPlaceEnum="buttonPlace_sc_2_1"
                                    app:bmb_normalColor="@color/colorPrimary"
                                    android:elevation="6dp"
                                    />
                                <com.github.mikephil.charting.charts.RadarChart
                                    android:id="@+id/chart"
                                    android:layout_width="400dp"
                                    android:layout_height="300dp"
                                    android:elevation="4dp"
                                    />

                            </RelativeLayout>

                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </TabHost>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>

