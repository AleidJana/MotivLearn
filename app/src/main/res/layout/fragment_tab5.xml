<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jana.motivlearn.tab5">

    <!--edited-->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="45dp"
     >
    <!-- 1 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/r11"
                android:padding="0dp"
                android:layout_marginLeft="2dp"
                android:scaleType="fitEnd" />

            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginEnd="38dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="38dp"
                android:background="@drawable/button"
                android:text="@string/Create_challenge"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!--  2  -->

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="187dp"
                android:background="@drawable/r33"
                android:padding="0dp"
                android:scaleType="fitCenter" />

            <Button

                android:id="@+id/button"
                android:layout_width="110dp"
                android:layout_height="180dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:background="@drawable/button"
                android:text="@string/Suggest_challenge"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!--  3  -->

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/r55"
                android:padding="0dp"
                android:scaleType="fitEnd" />


            <Button
                android:id="@+id/vediobutton"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_alignEnd="@+id/button2"
                android:layout_alignTop="@+id/imageView3"
                android:background="@drawable/button"
                android:text="@string/Suggest_video"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />





        </RelativeLayout>
></LinearLayout>
</ScrollView>
</RelativeLayout>
