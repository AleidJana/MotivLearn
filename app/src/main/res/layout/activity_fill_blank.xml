<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink4"
    tools:context="com.example.jana.motivlearn.fillBlank">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:allowUndo="false"
        android:fitsSystemWindows="true"
        android:fontFamily="sans-serif"
        android:text="Fill blank"
        android:textColor="#8767b3"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="140dp"
        android:fontFamily="sans-serif"
        android:text="Question:"
        android:textColor="#8767b3"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:background="@drawable/ovalbutton"
        android:drawableLeft="@drawable/ic_add"
        android:text="Add blank"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="42dp"
        android:background="@drawable/ovalbutton"
        android:text="@string/Submit"

        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/text_view_style"
        android:ems="17"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:padding="6dp"
        android:hint="Enter Question"
        android:textColorHint="#8767b3"
        android:textSize="20dp" />


</RelativeLayout>




