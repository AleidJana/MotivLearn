<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/pink4"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="com.example.jana.motivlearn.fillBlank">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="149dp"
            android:layout_marginStart="149dp"
            android:layout_marginTop="72dp"
            android:allowUndo="false"
            android:fitsSystemWindows="true"
            android:fontFamily="sans-serif"
            android:text="Fill blank"
            android:textColor="#8767b3"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif"
            android:text="Question:"
            android:textColor="#8767b3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button234"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:background="@drawable/ovalbutton"
            android:drawableLeft="@drawable/ic_add"
            android:text="Add blank"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_below="@+id/editText"
            android:layout_marginTop="42dp"
            android:background="@drawable/ovalbutton"
            android:text="@string/Submit"

            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="12dp"
            android:background="@drawable/text_view_style"
            android:ems="17"
            android:inputType="textPersonName"
            android:text=" "
            android:textColor="#8767b3"
            android:textColorHint="#8767b3"
            android:textSize="15sp" />


    </RelativeLayout>




