<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink4"
    tools:context="com.example.jana.motivlearn.multipleChoices">
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Multiple Choices"
        android:textColor="#8767b3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="Question"
        android:textColor="#8767b3"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/text_view_style"
        android:ems="10"
        android:hint="  Enter Question"
        android:inputType="textPersonName"
        android:scrollbars="horizontal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="Choices"
        android:textColor="#8767b3"
        android:textSize="23sp"
        android:textStyle="bold" />


    <!--choice 1 -->
    <EditText
        android:id="@+id/editText2"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_toRightOf="@+id/radioGroup"
        android:background="@drawable/text_view_style"
        android:ems="10"
        android:hint="  Enter Choice 1"
        android:inputType="textPersonName"
        android:scrollbars="horizontal" />

    <!--choice 2 -->
    <EditText
        android:id="@+id/editText3"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_toRightOf="@+id/radioGroup"
        android:background="@drawable/text_view_style"
        android:ems="10"
        android:hint="  Enter Choice 2"
        android:inputType="textPersonName"
        android:scrollbars="horizontal" />


    <!--choice 3 -->
    <EditText
        android:id="@+id/editText4"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_toRightOf="@+id/radioGroup"
        android:background="@drawable/text_view_style"
        android:ems="10"
        android:hint="  Enter Choice 3"
        android:inputType="textPersonName"
        android:scrollbars="horizontal" />


    <!--choice 4 -->
    <EditText
        android:id="@+id/editText5"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_toRightOf="@+id/radioGroup"
        android:background="@drawable/text_view_style"
        android:ems="10"
        android:hint="  Enter Choice 4"
        android:inputType="textPersonName"
        android:scrollbars="horizontal" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/radioGroup"
        android:background="@drawable/ovalbutton"
        android:text="@string/Submit"
        android:textColor="@android:color/background_light" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="30dp"
        android:layout_height="200dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="240dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#8767b3" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:buttonTint="#8767b3" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:buttonTint="#8767b3" />


        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:buttonTint="#8767b3" />


    </RadioGroup>


</RelativeLayout>


